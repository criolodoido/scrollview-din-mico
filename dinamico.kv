<RootScreen>:
	PrimeiroScreen:
		
<PrimeiroScreen>:
	ScrollView:
		size_hint: 1, 1
		pos_hint:{'x': .0, 'y': .0}
		size: 100, 100
		GridLayout:
			cols: 2
			#rows: 
			padding: 10
			spacing: 10
			size_hint: None, None
			width: 600
			height: self.minimum_height
			MyLabel:
				text:" {}".format(self.value)
				text_size: self.width, None
				font_size: 40
				size_hint_y: None
				height: self.texture_size[1]
				id: lb5
			MyLabel2:
				text:" {}".format(self.pedido)
				text_size: self.width, None
				font_size: 40
				size_hint_y: None
				height: self.texture_size[1]
				id: lb10
	Button:
		text: "Aperte-me"
		size_hint: (.2,.2)
		pos_hint: {'center_x': .9, 'center_y': .9}
		on_press: root.fc1()

	Button:
		text: "Ou me aperta"
		size_hint: (.2,.2)
		pos_hint: {'center_x': .7, 'center_y': .9}
		on_press: root.fc2()
